{
  "name": "hello-world-api",
  "version": "1.0.0",
  "description": "Simple REST API for testing 5D Labs orchestrator workflow",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "pino": "8.15.0",
    "pino-http": "8.5.0"
  },
  "devDependencies": {
    "eslint": "8.48.0",
    "jest": "29.6.4",
    "nodemon": "3.0.1",
    "supertest": "6.3.3",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0"
  }
}
